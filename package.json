{
	"name": "obsidian-nordic",
	"version": "1.2.3",
	"private": true,
	"scripts": {
		"commit": "commit",
		"dev": "NODE_ENV=DEV nodemon -e scss ./tools/build.mjs",
		"build": "NODE_ENV=PROD node ./tools/build.mjs",
		"version": "node ./tools/version-bump.mjs && git add package.json manifest.json versions.json package.json",
		"prepare": "husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.1.0",
		"@commitlint/config-conventional": "^19.1.0",
		"@commitlint/prompt-cli": "^19.1.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^10.0.2",
		"husky": "^9.0.11",
		"node-sass": "^9.0.0",
		"nodemon": "^3.1.0",
		"semantic-release": "^23.0.4"
	},
	"release": {
		"branches": [
			"main"
		],
		"tagFormat": "${version}",
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			[
				"@semantic-release/git",
				{
					"assets": [
						"package.json",
						"manifest.json",
						"versions.json",
						"theme.css",
						"CHANGELOG.md"
					],
					"message": "chore(release): ${nextRelease.version} [skip ci]"
				}
			],
			[
				"@semantic-release/github",
				{
					"assets": [
						"manifest.json",
						"theme.css"
					],
					"releasedLabels": false
				}
			]
		]
	},
	"dependencies": {
		"nord": "^0.2.1"
	}
}
